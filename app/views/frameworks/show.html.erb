<div class="row">
    <div class="col-md-10">
        <h1><%= @framework.name %> | <%= @framework.average_rating %> <span class="glyphicon glyphicon-star"></span></h1>
        <p><strong>Built with:</strong> <%= @framework.languages.pluck(:name).uniq.join(", ") %></p>
        <h4><strong>Description:</strong> <%= @framework.description %></h4>
    </div>
    <div class="col-md-2">
        <h3>Options:</h3>
        <%= link_to "Edit", edit_framework_path(@framework), class: "btn btn-primary" %>
        <%= link_to "Delete", framework_path(@framework), method: :delete, class: "btn btn-danger" %>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h2>Libraries</h2>
    </div>
    <%= render partial: 'libraries/col_display', collection: @framework.libraries, :as => :library %>
</div>
