<%= form_for [@library, @comment] do |f| %>
    <%= f.label :rating %>
    <%= number_field_tag "review_rating_dispaly", 1, step: ".05", oninput: "this.form.review[rating].value=this.value" %><br/>
    <%= f.range_field :rating, min: 1, max: 5, step: ".05", oninput: "this.form.review_rating_dispaly.value=this.value" %>
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control" %><br/>
    <%= f.submit class: "btn btn-default" %>
<% end %>